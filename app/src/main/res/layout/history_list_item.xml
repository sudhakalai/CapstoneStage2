<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    android:elevation="8dp"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_med_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        tools:text="Crocin "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_finished_time"
        tools:text="12:30PM"
        android:paddingTop="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_finished_dosage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_finished_dosage"
        android:layout_alignParentTop="true"
        android:layout_below="@id/tv_med_name"
        android:textSize="16sp"
        tools:text=",1*100mg"
        android:layout_toRightOf="@id/tv_med_name"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_state"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:src="@drawable/ic_done_white"
        android:tint="@android:color/darker_gray"/>

</RelativeLayout>