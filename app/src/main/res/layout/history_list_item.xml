<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_margin="@dimen/dimen_8"
    android:elevation="@dimen/dimen_8"
    android:padding="@dimen/dimen_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_med_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_16"
        android:textColor="@color/colorPrimary"
        tools:text="Crocin "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_finished_time"
        tools:text="12:30PM"
        android:paddingTop="@dimen/dimen_8"
        android:textSize="@dimen/text_16"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_finished_dosage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_finished_dosage"
        android:layout_alignParentTop="true"
        android:layout_below="@id/tv_med_name"
        android:textSize="@dimen/text_16"
        tools:text=",1*100mg"
        android:layout_toEndOf="@id/tv_med_name"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/reminder_status"
        android:id="@+id/iv_state"
        android:paddingStart="@dimen/dimen_8"
        android:paddingEnd="@dimen/dimen_8" />

</RelativeLayout>